{
  "name": "@electron/sheriff",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "cross-env AUTO_TUNNEL_NGROK=e-sheriff yarn start",
    "lint": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "prettier:write": "prettier --write \"src/**/*.{ts,tsx}\"",
    "start": "node lib/index.js",
    "build-docker": "docker build -t electron/sheriff .",
    "start-docker": "docker run --rm -p 8080:8080 --env-file .env electron/sheriff"
  },
  "author": "Samuel Attard",
  "dependencies": {
    "@electron/github-app-auth": "^2.0.0",
    "@octokit/graphql": "^5.0.6",
    "@octokit/rest": "^20.0.2",
    "@octokit/webhooks": "^13.3.0",
    "@slack/web-api": "^6.8.0",
    "@slack/webhook": "^7.0.0",
    "ansi-to-svg": "^1.4.3",
    "chalk": "^5.3.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.19.2",
    "fs-extra": "^8.0.1",
    "googleapis": "^109.0.1",
    "heroku-client": "^3.1.0",
    "joi": "^17.13.3",
    "js-yaml": "^3.13.1",
    "ora": "^5.1.2",
    "queue": "^6.0.2"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/dotenv-safe": "^8.1.6",
    "@types/express": "^4.17.0",
    "@types/fs-extra": "^7.0.0",
    "@types/heroku-client": "^3.1.3",
    "@types/joi": "^14.3.3",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^20.14.12",
    "cross-env": "^5.2.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "ngrok": "^4.3.3",
    "prettier": "^2.7.1",
    "typescript": "^5.5.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
